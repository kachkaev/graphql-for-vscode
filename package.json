{
  "name": "graphql-for-vscode",
  "displayName": "GraphQL for VSCode",
  "version": "1.0.0",
  "description": "GraphQL syntax highlighting, linting, auto-complete, and more!",
  "author": {
    "name": "Kumar Harsh",
    "email": "khs@playlyfe.com",
    "url": "https://github.com/kumarharsh"
  },
  "keywords": [
    "multi-root ready",
    "vscode",
    "visual studio code",
    "graphql",
    "linter"
  ],
  "publisher": "kumar-harsh",
  "engines": {
    "vscode": "^1.17.0"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Mayank Agarwal (@Mayank1791989)",
      "url": "github.com/Mayank1791989",
      "email": "mayank@playlyfe.com"
    }
  ],
  "categories": [
    "Languages",
    "Linters",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kumarharsh/graphql-for-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/kumarharsh/graphql-for-vscode/issues"
  },
  "homepage": "https://github.com/kumarharsh/graphql-for-vscode/blob/master/README.md",
  "icon": "images/logo.png",
  "activationEvents": [
    "workspaceContains:.gqlconfig"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Graphql Configuration",
      "properties": {
        "graphqlForVSCode.nodePath": {
          "type": ["string"],
          "default": null,
          "description": "A path added to NODE_PATH when resolving the @playlyfe/gql module.",
          "scope": "resource"
        },
        "graphqlForVSCode.debug": {
          "type": "boolean",
          "default": false,
          "description": "enable debug logs.",
          "scope": "resource"
        },
        "graphqlForVSCode.watchman": {
          "type": "boolean",
          "default": true,
          "description": "use watchman if present.",
          "scope": "window"
        },
        "graphqlForVSCode.autoDownloadGQL": {
          "type": "boolean",
          "default": true,
          "description": "auto download @playlyfe/gql if not found in nodePath.",
          "scope": "resource"
        }
      }
   },
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".gql",
          ".graphql",
          ".graphqls"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./graphql.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.js.jsx",
          "source.tsx"
        ],
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.js.json",
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      },
      {
        "injectTo": [
          "source.ruby"
        ],
        "scopeName": "inline.graphql.rb",
        "path": "./syntaxes/graphql.rb.json",
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      }
    ],
    "snippets": [
      {
        "language": "graphql",
        "path": "./snippets/graphql.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn clean && yarn compile",
    "clean": "rimraf out",
    "compile": "tsc -p src",
    "watch": "tsc -watch -p src",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "semantic-release": "semantic-release pre && vsce publish -p $VS_TOKEN && semantic-release post",
    "commitmsg": "commitlint -e"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.0",
    "@commitlint/config-conventional": "^5.1.3",
    "@types/node": "^7.0.46",
    "conventional-recommended-bump": "^1.0.2",
    "husky": "^0.14.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^7.0.2",
    "semantic-release-visualstudio-marketplace-version": "^1.0.0",
    "tslint": "^4.5.1",
    "typescript": "^2.5.3",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "vscode-languageclient": "^3.5.0"
  },
  "galleryBanner": {
    "color": "#2e2348",
    "theme": "dark"
  },
  "release": {
    "getLastRelease": "semantic-release-visualstudio-marketplace-version",
    "analyzeCommits": "./scripts/analyzeCommits"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
